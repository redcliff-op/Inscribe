<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="min-h-screen bg-black p-5">
    <h1 class="text-4xl font-bold text-white">
      Your Notes App!!
    </h1>
    <form action="/create" method="post" class="mt-5 ">
      <input name="title" type="text" placeholder="Title" class=" text-white block bg-zinc-800 rounded-lg px-4 py-2">
      <textarea name="content" placeholder="Your note"
        class=" text-white mt-3 resize-none block bg-zinc-800 rounded-lg px-4 py-2"></textarea>
      <input value="Create note" type="submit" class="mt-3 rounded-lg bg-blue-600 px-4 py-2 text-white">
    </form>
    <div class="notes flex gap-3 flex-wrap mt-5">
      <% if(notes.length>0) { %>
        <% notes.forEach((note) => { %>
          <div class="note rounded-lg bg-zinc-800 px-6 py-4">
            <h1 class="text-white font-bold text-2xl"><%= note.title %></h1>
            <h1 class="text-white text-xl mb-3"><%= note.content %></h1>
            <div class="flex flex-row items-center justify-between">
              <a class="inline-block text-blue-500" href="/notes/<%= note._id %>">Read more</a>
              <a class="inline-block pl-2 text-red-500" href="/delete/<%= note._id %>">Delete</a>
            </div>
          </div>
        <% }) %>
      <% } else { %> 
        <h1 class="text-white font-bold text-xl">
          No Notes yet!
        </h1>
      <% } %>
    </div>
    <form action="/signout" method="post" class="mt-3">
      <input type="submit" value="SignOut" class="text-black font-bold bg-red-400 px-4 py-2 rounded-md">
    </form>
  </div>
</body>
</html>
